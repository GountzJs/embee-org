---
import { EmbeeBanner } from "@components/embee-banner";
import { SectionPage } from "@components/section-page";
import { BannerImg } from "./banner-img";
---

<SectionPage styleInline="gap: 100px">
  <EmbeeBanner
    url="https://discord.gg/c4CzFbaEtH"
    lettersUrl="https://embee-org.github.io/embee-statics/letters/discord.png"
    name="discord"
    color="linear-gradient(#2eabff, #1b8ff9 40%, #145eb9 90%)"
  >
    <BannerImg
      url="https://embee-org.github.io/embee-statics/images/embee/discord.png"
      styles={{
        transform: "translate(-40px, 10%)",
        height: "auto",
        width: "35%",
      }}
      alt={`Embeejayz discord`}
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://www.twitch.tv/embeejayz"
    lettersUrl="https://embee-org.github.io/embee-statics/letters/twitch.png"
    name="twitch"
    color="linear-gradient(#b085ff, #9146ff 40%, #8d30f7 90%)"
  >
    <BannerImg
      url="https://embee-org.github.io/embee-statics/images/embee/shaco.png"
      styles={{
        transform: "translate(-35px, 0)",
        height: "auto",
        width: "30%",
      }}
      alt="Embeejayz twitch"
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://www.youtube.com/@embeejay69"
    lettersUrl="https://embee-org.github.io/embee-statics/letters/youtube.png"
    name="youtube"
    color="linear-gradient(-180deg, #f71c0b, #D31405ff 60%, #ac1408 90%)"
  >
    <BannerImg
      url="https://embee-org.github.io/embee-statics/images/embee/computer.png"
      styles={{
        transform: "translate(-40px, 15%)",
        height: "auto",
        width: "32%",
      }}
      alt="Embeejayz youtube"
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://www.instagram.com/embeejayz/_"
    lettersUrl="https://embee-org.github.io/embee-statics/letters/instagram.png"
    name="instagram"
    color="linear-gradient(30deg, #feda75, #fa7e1e, #d62976, #962fbf, #4f5bd5)"
  >
    <BannerImg
      url="https://embee-org.github.io/embee-statics/images/embee/facha.png"
      styles={{
        transform: "translate(-55px, 0)",
        height: "auto",
        width: "30%",
      }}
      alt="Embeejayz instagram"
    />
  </EmbeeBanner>
  <EmbeeBanner
    url="https://twitter.com/EmBeeJay_"
    lettersUrl="https://embee-org.github.io/embee-statics/letters/twitter.png"
    name="twitter"
    color="linear-gradient(#454545, #3d3d3d 40%, #000000 90%)"
  >
    <BannerImg
      url="https://embee-org.github.io/embee-statics/images/embee/x.png"
      styles={{
        transform: "translate(-55px, 0)",
        height: "auto",
        width: "35%",
      }}
      alt="Embeejayz twitter"
    />
  </EmbeeBanner>
</SectionPage>
