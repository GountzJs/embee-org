---
import { Image } from "astro:assets";

interface Props {
  url: string;
  alt: string;
  height?: number;
  width?: number;
  styles: {
    transform: string;
    height: string;
    width: string;
  };
}

const { url, alt, height = 180, width = 180, styles } = Astro.props;
---

<Image
  class="embee-img"
  src={url}
  alt={alt}
  height={height}
  width={width}
  loading="lazy"
  style={{ ...styles }}
  id="banner-img"
  inferSize
/>

<style>
  .embee-img {
    position: absolute;
    aspect-ratio: 1/1;
    bottom: 0;
    left: 0;
  }
</style>
